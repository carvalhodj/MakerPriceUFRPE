<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campoJson"
        android:text="Atualizar Componentes"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar"
        android:id="@+id/botaoAtualizarJson"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/campoJson"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/urlImagenLoja"
        android:layout_above="@+id/campoJson"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Atualizar Imagem" />

</RelativeLayout>